<Window x:Class="ImenikWpf.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImenikWpf"
        mc:Ignorable="d"
        Title="Editor" Height="450" Width="800" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <UniformGrid Columns="2">
        <Label>Ime:</Label>
        <TextBox Text="{Binding Ime, UpdateSourceTrigger=Explicit}" MinWidth="200" />
        <Label>Prezime:</Label>
        <TextBox Text="{Binding Prezime, UpdateSourceTrigger=Explicit}" MinWidth="200" />
        <Label>Mejl:</Label>
        <TextBox Text="{Binding Email, UpdateSourceTrigger=Explicit}" MinWidth="200" />
        <Label>Telefon:</Label>
        <TextBox Text="{Binding BrojTelefona, UpdateSourceTrigger=Explicit}" MinWidth="200" />
        <Label>Nesto:</Label>
        <TextBox Text="{Binding Nesto, UpdateSourceTrigger=Explicit}" MinWidth="200" />
        <Button Click="Otkazi">Otkazi</Button>
        <Button Click="Ok">Ok</Button>
    </UniformGrid>
</Window>