<Window x:Class="ImenikWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImenikWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="508" Width="800" FontSize="33">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left">
            <Label>Ime:</Label>
            <TextBox Text="{Binding Ime}" MinWidth="200" />
            <Label>Prezime:</Label>
            <TextBox Text="{Binding Prezime}" MinWidth="200" />
            <Label>Mejl:</Label>
            <TextBox Text="{Binding Email}" MinWidth="200" />
            <Label>Telefon:</Label>
            <TextBox Text="{Binding BrojTelefona}" MinWidth="200" />
            <Button Click="Dodaj">Unos</Button>
        </StackPanel>
        <DataGrid Name="dgOsoba" ColumnWidth="*" IsReadOnly="true" />
    </DockPanel>
</Window>